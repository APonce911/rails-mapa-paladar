<div class="page" style="background-image: url(<%=image_path 'map-img.png' %>);">
  <%= render 'shared/navbar' %>
  <div class="container">
    <div class="row">
      <% unless user_signed_in? %>
          <div class="login-box col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
            <h1 class="page-title">Mapa Paladar</h1>
            <div class="login-links"><p><%= render 'components/login' %></p></div>
          </div>
      <% else  %>

        <%= form_tag posts_path do %>
          <%#= hidden_field_tag 'teddy_id', @teddy.id %>
          <%= submit_tag 'share your content', class: 'btn btn-primary' %>
        <% end %>

        <%#= link_to 'share your content', posts_path %>

      <% end %>
    </div>
  </div>
</div>


